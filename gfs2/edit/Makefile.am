MAINTAINERCLEANFILES	= Makefile.in

sbin_PROGRAMS		= gfs2_edit

noinst_HEADERS		= gfs2hex.h hexedit.h extended.h

gfs2_edit_SOURCES	= gfs2hex.c hexedit.c savemeta.c extended.c

